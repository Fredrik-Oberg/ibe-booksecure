.form-group
    position relative
    display block
    border 1px solid rgba(0, 0, 0, .2)
    font-size 15px
    height 50px
    margin 0 0 12px
    background-color white
    border-radius border-radius

    @media tablet-and-up
        margin 0 0 15px

    @media desktop-and-up
        margin 0 5px 15px

    .floating-label
        position absolute
        top 6px
        left 11px
        font-size .7em
        font-weight font-weight-bold
        pointer-events none

    input,
    select,
    textarea
        border-radius @border-radius
        border none

    input
        padding 18px 10px 8px
        line-height 1.8em
        font-size 1em
        height 100%
        width 100%

    select
        padding 18px 10px 8px 7px
        line-height 1.8em
        font-size 1em
        height 100%
        width 100%
        border none

    .click-area
        padding 18px 10px 8px
        line-height 1.8em
        font-size 1em
        height 100%
        border none

    .icon
        position absolute
        padding 8px 6px 0 6px
        font-size 28px
        color color-primary-dark
        background-color white
        pointer-events none
        outline none
        height calc(100% - 1px)
        top 1px

    .icon-left
        left 1px
        background-color rgba(0,0,0,.03)
        border-right border-light
        border-radius border-radius 0 0 border-radius

    .icon-right
        right 1px
        border-radius 0 border-radius border-radius 0

    &.with-icon-left
        .floating-label
            left 48px

        .click-area
            padding-left 48px

