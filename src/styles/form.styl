.form-group
    position relative
    display block
    border 1px solid rgba(0, 0, 0, .2)
    font-size 16px
    height 50px
    margin 0 10px 10px
    background-color white

    label
        position absolute
        top 4px
        left 11px
        text-transform uppercase
        font-size .7em

    select
        padding 18px 10px 8px 7px
        line-height 1.8em
        font-size 1em
        height 100%
        width 100%
        border none

    .click-area
        padding 18px 10px 8px
        line-height 1.8em
        font-size 1em
        height 100%

    .input-icon
        position absolute
        right 1px
        top 10px
        padding-right 6px
        font-size 28px
        color color-primary
        background-color white
        pointer-events none
        outline none


