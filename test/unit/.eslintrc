{
    "env": {
        "mocha": true
    },
    "globals": {
        "expect": true,
        "sinon": true
    },
    // add your custom rules here
    "rules": {
        // allow paren-less arrow functions
        "arrow-parens": 0,
        // allow async-await
        "generator-star-spacing": 0,
        "eol-last": 0,
        "space-before-function-paren": 0,
        "spaced-comment": 0,
        "indent": [
            2,
            4
        ]
    }
}
